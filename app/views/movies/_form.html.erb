<%= form_for @movie do |f| %>

 <% if @movie.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@movie.errors.count, "error") %> prohibited
        this movie from being saved:
      </h2>
      <ul>
        <% @movie.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
	  <p class = "long-field">
	    <%= f.label :title %><br>
	    <%= f.text_field :title %>
	  </p>

	 <p>
	 	<%= f.label :year %><br>
		<%= f.date_select :year, :ignore_time => true, discard_month: true, discard_day:true, start_year: 1900 %>
	 </p>
	 
	 <p> 
	 	<%= f.radio_button 'rating', 'G' %>
		<%= label_tag(:rating, "G") %>
		<%= f.radio_button 'rating', 'PG' %>
		<%= label_tag(:rating, "PG") %>
		<%= f.radio_button 'rating', 'PG-13' %>
		<%= label_tag(:rating, "PG-13") %>
		<%= f.radio_button 'rating', 'R' %>
		<%= label_tag(:rating, "R") %>
		<%= f.radio_button 'rating', 'NC-17' %>
		<%= label_tag(:rating, "NC-17") %>
		<%= f.radio_button 'rating', 'Unrated' %>
		<%= label_tag(:rating, "Unrated") %>
	 </p>

	 <p>
	 	<%= f.label :length %><br>
		 <%= f.time_select :length, :ignore_date => true, discard_month: true, discard_day: true, discard_year: true  %>
	 </p>

	 <p>
	 	<%= f.label :genre %><br>
	 	 <%= f.collection_select :genre, Genre.order(:name),:id,:name, include_blank: false %>
	 </p>

	 
	 <style>
	 	#smalltext {
	 		font-size: 0.5em;
	 		padding-top: -1em;
	 		margin-top:-2.75em;
	 		font-family: serif;
	 	}
	 </style>
	  <p>
	  	<%= f.label :score %><br>
	  <%= f.range_field :score, :in => 0..10, :step => '.1' %>
	  <table id = "smalltext">
	  	<tr >
	  		<% for i in 0..10 %>
	  			<td><%= i %></td>
  			<% end %>
	  	</tr>
	  </table>
	  </p>
	  
	  <p>
	    <%= f.label :synopsis %><br>
	    <%= f.text_area :synopsis %>
	  </p>

	  <p>
	    <%= f.submit %>
	  </p>
	<% end %>