<h1>Directors</h1>
<%= link_to 'Add New Director', '/directors/new'%>
<br><br>
<%= link_to 'Back', '/'%>
<br><br>
<table>
  <tr>
    <th>Name</th>
  </tr>
 
  <% @directors.each do |director| %>
    <tr>
      <td><%= director.name %></td>
      <td><%= link_to 'Show', director_path(director) %></td>
      <td><%= link_to 'Edit', edit_director_path(director) %></td>
      <td><%= link_to 'Edit Credits', director_path(director) + '/edit_credits' %>
       <td><%= link_to 'Delete', director_path(director),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>