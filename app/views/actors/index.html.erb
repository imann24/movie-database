
<h1>All Actors</h1>

<%= link_to "Add New Actor", '/actors/new' %>
<br><br>
<%= link_to 'Back', '/' %>
<br><br>
<table>
  <tr>
    <th>Name:</th>
  </tr>
 
  <% @actors.each do |actor| %>
    <tr>
      <td><%= actor.name %></td>
      <td><%= link_to 'Show', actor_path(actor) %></td>
      <td><%= link_to 'Edit', edit_actor_path(actor) %></td>
      <td><%= link_to 'Edit Credits', actor_path(actor) + '/edit_credits' %>
      <td><%= link_to 'Delete', actor_path(actor),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>